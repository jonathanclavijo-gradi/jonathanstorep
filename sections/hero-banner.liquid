{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Titulo"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen de fondo"
    }
  ]
}
{% endschema %}

<div class="hero-banner" style="background-image: url('{{ section.settings.image}}');">
  <h1>{{ section.settings.heading }}</h1>
</div>
